<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 
             x:Class="Sexual_health_platform.GenderSurveyPage">
	<StackLayout Padding="30">
		<Label Text="Select Your Gender" FontSize="24" HorizontalOptions="Center" />
		<Picker x:Name="GenderPicker" Title="Tap to Select Gender" SelectedIndexChanged="GenderPicker_SelectedIndexChanged">
			<Picker.Items>
				<x:String>Male</x:String>
				<x:String>Female</x:String>
				<x:String>Non-binary</x:String>
				<x:String>Prefer not to say</x:String>
			</Picker.Items>
		</Picker>
		<Button Text="Next" Clicked="OnNextButtonClicked" IsEnabled="False" x:Name="NextButton" />
	</StackLayout>
</ContentPage>
