<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 
				x:Class="Sexual_health_platform.AgeSelectionPage"
				xmlns:sys="clr-namespace:System;assembly=mscorlib">
	<StackLayout Padding="30">
		<Label Text="Select Your Birthdate" FontSize="24" HorizontalOptions="Center" />
		<DatePicker x:Name="BirthdatePicker"
					MaximumDate="{x:Static sys:DateTime.Today}"
					MinimumDate="{Binding Source={x:Static sys:DateTime.Today}, Path=AddYears(-120)}"
					DateSelected="OnDateSelected" />
		<Button Text="Submit" Clicked="OnSubmitButtonClicked" IsEnabled="False" x:Name="SubmitButton" />
	</StackLayout>
</ContentPage>
